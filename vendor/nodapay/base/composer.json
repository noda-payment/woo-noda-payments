{
  "name": "nodapay/base",
  "type": "nodapay-plugin",
  "config": {
    "vendor-dir": "vendor",
    "sort-packages": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.4 <8.3",
    "guzzlehttp/guzzle": "^7.0",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "NodaPay\\Base\\": ""
    }
  }
}
